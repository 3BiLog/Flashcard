<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="90.0" prefWidth="912.0" style="-fx-background-color: #78909C" BorderPane.alignment="CENTER" fx:controller="FlashCard.card_topController" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
<!-- Nút menu bên trái -->
<left>
    <Button fx:id="menuButton" onAction="#onMenuClicked" mnemonicParsing="false" styleClass="left-menu" textAlignment="CENTER" BorderPane.alignment="CENTER_LEFT">
        <graphic>
            <ImageView fx:id="menu" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
        </graphic>
    </Button>
</left>
<!-- Tiêu đề ở giữa -->
<center>
    <Label alignment="CENTER" fx:id="deckTitleLabel" textAlignment="CENTER">
        <font>
            <Font name="Verdana Bold" size="60.0" />
        </font>
        <textFill>
            <LinearGradient endX="1.0" endY="0.590" startX="0.208" startY="0.735">
                <stops>
                    <Stop>
                        <color>
                            <Color red="0.645" green="0.218" blue="0.842" />
                        </color>
                    </Stop>
                    <Stop offset="1.0">
                        <color>
                            <Color red="0.030" green="0.903" blue="1.0" />
                        </color>
                    </Stop>
                </stops>
            </LinearGradient>
        </textFill>
    </Label>
</center>

</BorderPane>
