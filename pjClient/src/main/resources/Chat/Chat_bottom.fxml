<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="chatBottomPane" spacing="10" stylesheets="@chatBottom.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chat.ChatBottomController">

    <Button fx:id="imageButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/image.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
    <Button fx:id="fileButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/file.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
    <Button fx:id="encryptedFileButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/lock.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
    <Button fx:id="recordButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/mic.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
    <TextArea fx:id="messageInput" prefHeight="40" prefWidth="450" promptText="Nhập tin nhắn..." wrapText="true">
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin></TextArea>
    <Button fx:id="iconButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/icon.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
    <Button fx:id="sendButton">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/send.png" />
                </image>
            </ImageView>
        </graphic>
      <HBox.margin>
         <Insets right="25.0" />
      </HBox.margin>
    </Button>
</HBox>
